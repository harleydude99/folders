<div class="sidebar-folder">
  {{#if isEditing}}
    <span class="expander" {{action 'toggleExpansion'}}>
    {{if isExpanded '-' '+'}}
    </span>
    {{input value=folder.name}}
    <button {{action 'save'}}>Save</button>
    <button {{action 'destroy'}}>Destroy</button>
  {{else}}
    <span class="expander" {{action 'toggleExpansion'}}>
    {{if isExpanded '-' '+'}}
    {{folder.name}}<button {{action 'edit'}}>Edit</button>
    </span>
  {{/if}}
  <div class="expanded-content">
    {{#if isExpanded}}
      {{#each folder.folders as |subfolder|}}
        {{expandable-folder folder=subfolder}}
      {{/each}}

      {{#each folder.files as |file|}}
        <div>{{edit-file file=file}}</div>
      {{/each}}
      <p>
        {{#item-adder folder type='folder'}}
        {{/item-adder}}
      </p>
      <p>
        {{#item-adder folder type='file'}}
        {{/item-adder}}
      </p>
    {{/if}}
  </div>
</div>
